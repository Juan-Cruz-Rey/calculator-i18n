---
import BaseLayout from '@/layouts/BaseLayout.astro';
import TDEECalculator from '@/components/calculators/TDEECalculator.astro';
import { t } from '@/utils/i18n';

const title = t('tdee.title', 'hi') + ' - ' + t('site.title', 'hi');
const description = t('tdee.metaDescription', 'hi');
---

<BaseLayout title={title} description={description} lang="hi" calculator="tdee">
  <div class="container">
    <div class="page-header">
      <h1>{t('tdee.title', 'hi')}</h1>
      <p class="page-description">{t('tdee.description', 'hi')}</p>
    </div>

    <TDEECalculator lang="hi" />
  </div>
</BaseLayout>

<style>
  .page-header {
    text-align: center;
    padding: 2rem 0 1rem;
  }

  .page-header h1 {
    font-size: 2.5rem;
    color: #333;
    margin-bottom: 0.5rem;
  }

  .page-description {
    font-size: 1.25rem;
    color: #666;
  }
</style>
