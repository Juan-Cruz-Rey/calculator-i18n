---
import BaseLayout from '@/layouts/BaseLayout.astro';
import WeightWatchersCalculator from '@/components/calculators/WeightWatchersCalculator.astro';
import { t } from '@/utils/i18n';

const title = t('weightWatchers.title', 'tr') + ' - ' + t('site.title', 'tr');
const description = t('weightWatchers.metaDescription', 'tr');
---

<BaseLayout title={title} description={description} lang="tr" calculator="weightWatchers">
  <div class="container">
    <div class="page-header">
      <h1>{t('weightWatchers.title', 'tr')}</h1>
      <p class="page-description">{t('weightWatchers.description', 'tr')}</p>
    </div>

    <WeightWatchersCalculator lang="tr" />
  </div>

  <style>
    .page-header {
      text-align: center;
      padding: 2rem 0;
    }

    .page-header h1 {
      font-size: 2.5rem;
      color: #333;
      margin-bottom: 0.5rem;
    }

    .page-description {
      font-size: 1.25rem;
      color: #666;
    }
  </style>
</BaseLayout>
