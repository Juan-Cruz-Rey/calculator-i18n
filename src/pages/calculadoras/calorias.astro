---
import BaseLayout from '@/layouts/BaseLayout.astro';
import CalorieCalculator from '@/components/calculators/CalorieCalculator.astro';
import { t } from '@/utils/i18n';

const title = t('calorie.title', 'es') + ' - ' + t('site.title', 'es');
const description = t('calorie.metaDescription', 'es');
---

<BaseLayout title={title} description={description} lang="es" calculator="calorie">
  <div class="container">
    <div class="page-header">
      <h1>{t('calorie.title', 'es')}</h1>
      <p class="page-description">{t('calorie.description', 'es')}</p>
    </div>

    <CalorieCalculator lang="es" />
  </div>
</BaseLayout>

<style>
  .page-header {
    text-align: center;
    padding: 2rem 0 1rem;
  }

  .page-header h1 {
    font-size: 2.5rem;
    color: #333;
    margin-bottom: 0.5rem;
  }

  .page-description {
    font-size: 1.25rem;
    color: #666;
  }
</style>
