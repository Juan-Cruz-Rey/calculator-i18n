---
import BaseLayout from '@/layouts/BaseLayout.astro';
import PercentageCalculator from '@/components/calculators/PercentageCalculator.astro';
import { t } from '@/utils/i18n';

const title = t('percentage.title', 'pl') + ' - ' + t('site.title', 'pl');
const description = t('percentage.metaDescription', 'pl');
---

<BaseLayout title={title} description={description} lang="pl" calculator="percentage">
  <div class="container">
    <div class="page-header">
      <h1>{t('percentage.title', 'pl')}</h1>
      <p class="page-description">{t('percentage.description', 'pl')}</p>
    </div>

    <PercentageCalculator lang="pl" />
  </div>
</BaseLayout>

<style>
  .page-header {
    text-align: center;
    padding: 2rem 0 1rem;
  }

  .page-header h1 {
    font-size: 2.5rem;
    color: #333;
    margin-bottom: 0.5rem;
  }

  .page-description {
    font-size: 1.25rem;
    color: #666;
  }
</style>
